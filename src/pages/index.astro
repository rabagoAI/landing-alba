  <script>
    const EMAILJS_SERVICE_ID = 'YOUR_SERVICE_ID';
    const EMAILJS_TEMPLATE_ID = 'YOUR_TEMPLATE_ID';
    const EMAILJS_PUBLIC_KEY = 'YOUR_PUBLIC_KEY';

    const ejsScript = document.createElement('script');
    ejsScript.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js';
    ejsScript.onload = () => {
      (window as any).emailjs.init({ publicKey: EMAILJS_PUBLIC_KEY });
    };
    document.head.appendChild(ejsScript);

    function showToast(msg: string, type: 'success' | 'error') {
      const t = document.getElementById('toast')!;
      t.textContent = msg;
      t.className = `toast-msg toast-${type} show`;
      setTimeout(() => t.classList.remove('show'), 4000);
    }

    const form = document.getElementById('contact-form') as HTMLFormElement;
    const btn = document.getElementById('submit-btn') as HTMLButtonElement;
    const btnText = document.getElementById('btn-text')!;
    const btnLoading = document.getElementById('btn-loading')!;

    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      btn.disabled = true;
      btnText.classList.add('hidden');
      btnLoading.classList.remove('hidden');

      const fd = new FormData(form);
      try {
        await (window as any).emailjs.send(EMAILJS_SERVICE_ID, EMAILJS_TEMPLATE_ID, {
          from_name: fd.get('nombre'),
          from_email: fd.get('email'),
          level: fd.get('nivel'),
          message: fd.get('mensaje'),
        });
        showToast('‚úÖ ¬°Mensaje enviado! Te respondo en menos de 24h.', 'success');
        form.reset();
      } catch {
        showToast('‚ùå Error al enviar. Cont√°ctame por WhatsApp.', 'error');
      } finally {
        btn.disabled = false;
        btnText.classList.remove('hidden');
        btnLoading.classList.add('hidden');
      }
    });
  </script>
